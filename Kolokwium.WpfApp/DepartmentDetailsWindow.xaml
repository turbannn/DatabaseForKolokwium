<Window x:Class="Kolokwium.WpfApp.DepartmentDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kolokwium.WpfApp"
        mc:Ignorable="d"
        Title="DepartmentDetailsWindow" Height="500" Width="700" Loaded="WindowLoadedDetails">
    <Grid>
        <Grid Margin="0,380,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" FontSize="25" Click="BackClick">Back</Button>
        </Grid>
        <Grid Margin="0,0,0,110">
            <DataGrid x:Name="DataGridEmployees" AutoGenerateColumns="False" DockPanel.Dock="Bottom" SelectionMode="Single"/>
        </Grid>
    </Grid>
</Window>
